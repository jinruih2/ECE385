module  frameROM
(
		input [13:0] read_address, // index 8 sprites, each 1024 addresses
		// input Clk,
		output logic [3:0] data_Out
);

// mem has width of 4 bits and a total of 2**14 (16k) addresses
// because we need 4 bits for the palette index of each of the 32*32 pixel per sprite
// and we plan to use 16 sprites.

logic [3:0] mem [0:2**14-1];

initial
begin
	$readmemh("sprite_bytes/ground.txt", mem);
	$readmemh("sprite_bytes/braver_0.txt", mem + 32*32*4*1);
end

assign data_Out = mem[read_address];
// always_ff @ (posedge Clk) begin
// 	data_Out<= mem[read_address];
// end

endmodule
